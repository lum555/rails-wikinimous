  <div class="container">
    <h1>Articles</h1>
    <% @articles.each do |article| %>
      <div class='card'>
        <ul class="list-group">
          <li class="list-group-item"><%= link_to "#{article.title}", "/articles/#{article.id}" %>
            <span><%= link_to edit_articles_path(article) do %>
              <i class="fas fa-edit"></i>
              <% end %>
            </span>
          </li>
        </ul>
    </div>
    <% end %>
    <%= link_to "Add a new article", new_article_path, :class => "btn btn-default btn-info", :id => "add-button"   %>
</div>
