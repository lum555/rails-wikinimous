<div class="container">
<h1>Edit article</h1>

<%= form_for @article, :html => {:class => "form-group"} do |f| %>
  <div class="form-group">
    <%= f.label :title, "article", class: "control-label" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :content, "Content", class: "control-label" %>
    <%= f.text_field :content, class: "form-control" %>
  </div>
  <div class="form-group">
  <%= f.submit "Submit", class: "btn btn-default btn-primary" %>
  <%= link_to "Return to index", articles_path, :class => "btn btn-default btn-info"  %>
  <%= link_to "Delete", article_path, :class => "btn btn-default btn-danger",
        method: :delete,
        data: { confirm: "Are you sure?" } %>
<% end %>
</div>
